<h1>@ViewBag.title</h1>

<form action="search/results" method="post">
    <h2>Search by:</h2>

    <p>
        @foreach (KeyValuePair<string, string> column in ViewBag.columns)
        {
            <span>
                <input type="radio"
                       name="searchType"
                       id="@column.Key"
                       value="@column.Key"
                       checked="@column.Key == 'all''" />
                <label for="@column.Key">@column.Value</label>
            </span>
        }
    </p>

    <p>
        <label for="searchTerm">Keyword:</label>
        <input type="text" name="searchTerm" id="searchTerm" />
    </p>

    <input type="submit" value="Search" />
</form>

<hr />

@if (ViewBag.jobs != null)
{
    <h3>@ViewBag.jobs.Count Result(s)</h3>

        <table class="job-listing">
            @foreach (Dictionary<String, String> job in ViewBag.jobs)
            {//do I need a tbody?
                foreach (KeyValuePair<string, string> colval in job)
                {
                    <tr>
                        <td>@colval.Key</td>
                        <td>@colval.Value</td>
                    </tr>
                }
                /*in order to get formatting right each job needs to be its own table*/
            }

        </table>


    }